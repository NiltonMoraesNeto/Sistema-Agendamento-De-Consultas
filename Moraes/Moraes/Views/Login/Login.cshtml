@model LoginModel

@{
    Layout = "../Shared/_LayoutLogin.cshtml";
    //Layout = null; //Cancela o uso do template Layout
}
        <div class="limiter">
            <div class="container-login100">
                <div class="wrap-login100">
                    <div class="login100-pic js-tilt" data-tilt>
                        <img src="images/img-01.png" alt="IMG">
                    </div>

                    <form class="login100-form validate-form" asp-controller="Login" asp-action="Login" method="post">
                        <span class="login100-form-title">
                            LOGIN
                        </span>
                        @{
                            try
                            {
                                var erro = TempData["ErrorLogin"].ToString();
                                <h5 class="text-danger">@erro</h5>
                            }
                            catch
                            {

                            }
                        }

                        <div class="wrap-input100 validate-input" data-validate="Email é obrigatório: ex@abc.com">
                            <!--<input class="input100" type="text" name="email" placeholder="Email">-->
                            <input type="text" class="input100" asp-for="Email" placeholder="Email">
                            <span class="focus-input100"></span>
                            <span class="symbol-input100">
                                <i class="fa fa-envelope" aria-hidden="true"></i>
                            </span>
                        </div>
                        <span asp-validation-for="Email" class="text-danger"></span>

                        <div class="wrap-input100 validate-input" data-validate="Senha é obrigatória">
                            <!--<input class="input100" type="password" name="pass" placeholder="Password">-->
                            <input type="password" class="input100" asp-for="Senha" placeholder="Senha">
                            <span class="focus-input100"></span>
                            <span class="symbol-input100">
                                <i class="fa fa-lock" aria-hidden="true"></i>
                            </span>
                        </div>
                        <span asp-validation-for="Senha" class="text-danger"></span>

                        <div class="container-login100-form-btn">
                            <button class="login100-form-btn">
                                Login
                            </button>
                        </div>

                        <div class="text-center p-t-12">
                            <span class="txt1">
                                Esqueceu
                            </span>
                            <a class="txt2" href="#">
                                Email / Senha?
                            </a>
                        </div>

                        <div class="text-center p-t-136">
                            <a class="txt2" href="#">
                                Criar a sua Conta
                                <i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
