@model CalendarioModel
<h1>Cadastrar Consulta</h1>
<br />

<form asp-controller="Calendario" asp-action="Cadastro">

    <input type="hidden" asp-for="Id" value="@try {@ViewBag.Calendar.Id} catch {}" />

    <div class="form-group">
        <label>Assunto</label>
        <input asp-for="Assunto" type="text" class="form-control" value="@try {@ViewBag.Calendar.Assunto} catch {}" />
        <span asp-validation-for="Assunto" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Descrição</label>
        <input asp-for="Descricao" type="text" class="form-control" value="@try {@ViewBag.Calendar.Descricao} catch {}" />
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Data de Início da Consulta</label>
        <input asp-for="Start" type="datetime-local" class="form-control" value="@try {@ViewBag.Calendar.Start} catch {}" />
        <span asp-validation-for="Start" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Data de Fim da Consulta</label>
        <input asp-for="End" type="datetime-local" class="form-control" value="@try {@ViewBag.Calendar.End} catch {}" />
        <span asp-validation-for="End" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Médico</label>

        <select asp-for="IdUsuario" class="form-control">
            @{
                foreach (var item in (List<UsuarioModel>)ViewBag.ListaUsuario)
                {
                    <option value="@item.IdUsuario">@item.Nome</option>
                }
            }
        </select>
    </div>

    <button type="submit" class="btn btn-block btn-success">REGISTRAR</button>
</form>

